<br />
<div class="row">
	<div class="col-md-12 text-center">
		<h1>Equihax Hackoween DC 2017</h1>
		<br />
		<button class="btn btn-red" data-toggle="modal" data-target="#add-guest">Check if Hacked?</button>
	</div>
</div>

<br />

<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				Guests
			</div>
			<div class="panel-body">
				<table class="guests-table">
					<tbody>
						<tr>
							<td class="text-left"><strong>Full Name</strong></td>
							<td><strong>Phone Number</strong></td>
							<td><strong>Deep Dark Secret</strong></td>
						</tr>
						<% @guests.each do |guest| %>
							<tr>
								<td class="text-left"><%= guest.fullname %></td>
								<td><%= guest.phone_number %></td>
								<td id="guest-td-<%= guest.id %>"><button class="btn btn-red" id="hack-<%= guest.id %>">Hack</button></td>
								<script>
									$(function() {
										$("#hack-<%= guest.id %>").click(function() {
											$("#guest-td-<%= guest.id %>").html("<%= guest.secret %>");  
										})
									})
								</script>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<!-- Modal For Phone Number -->
<div id="add-guest" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Check if Hacked?</h4>
      </div>
      <div class="modal-body">
        <%= form_for @guest do |f| %>
		<div class="form-group">
			<%= f.text_field :fullname, autofocus: true, placeholder: "Full Name", required: true, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.phone_field :phone_number, autofocus: true, placeholder: "Your Phone Number", required: true, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.text_area :secret, rows: 5, cols: 25, autofocus: true, placeholder: "Deep dark secret about yourself...", required: true, class: "form-control" %>
		</div>
		<div class="text-center">
			<%= f.submit "Save", class: "btn btn-block btn-red" %>
		</div>
        <% end %>
      </div>
    </div>
  </div>
</div>